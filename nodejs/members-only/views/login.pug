extends layout

block content
  h1= title
  form(method="post") 
    section
    section
      label(for="username") Username:
      input#username(
        type="text",
        name="username",
        minLength="2",
        maxLength="50",
        value=formData ? formData.username : "",
        required
      )
      if errors && errors.username
        label.error(for="username")= errors.username.msg
    section
      label(for="pwd") Password:
      input#pwd(
        type="password",
        name="password",
        minLength="3",
        value=formData ? formData.password : "",
        required
      )
      if errors && errors.password
        label.error(for="pwd")= errors.username.msg
    button(type="submit") Sign up
