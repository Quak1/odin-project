doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(href="/style.css", rel="stylesheet")
    title= title
  body
    nav
      ul.main
        if (user)
          li: a(href="/") Home
          li: a(href="/logout") Log out
          li: a(href="/file") Upload file
        else
          li: a(href="/signup") Sign up
          li: a(href="/login") Log in
    block content
