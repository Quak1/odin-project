extends layout

block content
  h1= title
  form(method="post") 
    section
      label(for="firstName") First name:
      input#firstName(
        type="text",
        name="firstName",
        maxLength="100",
        value=formData ? formData.firstName : "",
        required
      )
      if errors && errors.firstName
        label.error(for="firstName")= errors.firstName.msg
    section
      label(for="lastName") Last name:
      input#lastName(
        type="text",
        name="lastName",
        maxLength="100",
        value=formData ? formData.lastName : "",
        required
      )
      if errors && errors.lastName
        label.error(for="lastName")= errors.lastName.msg
    section
      label(for="username") Username:
      input#username(
        type="text",
        name="username",
        minLength="2",
        maxLength="50",
        value=formData ? formData.username : "",
        required
      )
      if errors && errors.username
        label.error(for="username")= errors.username.msg
    section
      label(for="pwd") Password:
      input#pwd(
        type="password",
        name="password",
        minLength="3",
        value=formData ? formData.password : "",
        required
      )
      if errors && errors.password
        label.error(for="pwd")= errors.username.msg
    section
      label(for="pwdConfirm") Password confirmation:
      input#pwdConfirm(
        type="password",
        name="passwordConfirmation",
        minLength="3",
        value=formData ? formData.passwordConfirmation : "",
        required
      )
      if errors && errors.passwordConfirmation
        label.error(for="pwdConfirm")= errors.passwordConfirmation.msg
    button(type="submit") Sign up
