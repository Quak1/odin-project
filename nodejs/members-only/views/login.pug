extends layout

block content
  h1= title
  form(method="post") 
    if errors
      p.error= errors
    section
      label(for="username") Username:
      input#username(
        type="text",
        name="username",
        minLength="2",
        maxLength="50",
        value=formData ? formData.username : "",
        required
      )
    section
      label(for="pwd") Password:
      input#pwd(
        type="password",
        name="password",
        minLength="3",
        value=formData ? formData.password : "",
        required
      )
    button(type="submit") Sign up
