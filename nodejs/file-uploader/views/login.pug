extends partials/layout

block content
  main#form
    h1= title
    form(method="post") 
      if errors
        label.error= errors[0]
      section
        label(for="username") Username:
        input#username(
          type="text",
          name="username",
          minLength="2",
          maxLength="50",
          required
        )
      section
        label(for="pwd") Password:
        input#pwd(type="password", name="password", minLength="3", required)
      section.buttons
        button(type="submit") Log in
