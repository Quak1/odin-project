doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(href="/style.css", rel="stylesheet")
    title= title
  body
    nav: ul
      li: a(href="/") Messages
      if (!user)
        li: a(href="/signup") Sign up
        li: a(href="/login") Log in
      else
        li: a(href="/message") New message
        li: a(href="/logout") Log out
        li: a(href="/join_member") Become a member
        li: a(href="/join_admin") Become an admin
    block content
