<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
</head>

<body>
    <h1><%= title %></h1>
    <ul>
        <% if (locals.users) {%>
        <% users.forEach(user => { %>
        <li>
            <div>
                ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, email: <%= user.email %>
                <% if (user.age) { %>
                , Age:<%= user.age %>
                <% } %>
            </div>
            <% if (user.bio) { %>
            <p>Bio: <%= user.bio %></p>
            <% } %>
            <a href="/<%= user.id %>/update">Update</a>
            <form action="/<%= user.id %>/delete" method="POST" style="display:inline;">
                <button type="submit"
                    onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
            </form>
        </li>
        <% }); %>
        <% } %>
    </ul>
    <a href="/create">Create a user</a>
</body>

</html>
