extends layout

block content
  main#form
    h1= title
    form(method="post") 
      section
        label(for="username") Username:
        input#username(
          type="text",
          name="username",
          minLength="2",
          maxLength="50",
          value=formData ? formData.username : "",
          required
        )
        if errors && errors.username
          label.error(for="username")= errors.username.msg
      section
        label(for="pwd") Password:
        input#pwd(
          type="password",
          name="password",
          minLength="3",
          value=formData ? formData.password : "",
          required
        )
        if errors && errors.password
          label.error(for="pwd")= errors.username.msg
        if errors && errors.passwordConfirmation
          label.error(for="pwdConfirm")= errors.passwordConfirmation.msg
      section
        label(for="pwdConfirm") Password confirmation:
        input#pwdConfirm(
          type="password",
          name="passwordConfirmation",
          minLength="3",
          required
        )
      button(type="submit") Sign up
